<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thomashofmann.xposed.mediascanneroptimizer">

    <application android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@drawable/ic_launcher"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="xposedmodule"
            android:value="true" />
        <meta-data
            android:name="xposedminversion"
            android:value="54" />
        <meta-data
            android:name="xposeddescription"
            android:value="Xposed Media Scanner Optimizer" />
        <activity
            android:name=".PreferencesActivity"
            android:label="@string/launcher_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

    <permission android:name="com.thomashofmann.xposed.mediascanneroptimizer.permission.MEDIA_STORE_OPERATIONS"
        android:label="@string/perm_label_media_store_operations"
        android:description="@string/perm_desc_media_store_operations"
        android:permissionGroup="android.permission-group.SYSTEM_TOOLS"
        android:protectionLevel="dangerous" />

    <uses-permission android:name="com.thomashofmann.xposed.mediascanneroptimizer.permission.MEDIA_STORE_OPERATIONS"/>
</manifest>

