<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thomashofmann.xposed.mediascanneroptimizer">

    <application android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@drawable/ic_launcher"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="xposedmodule"
            android:value="true" />
        <meta-data
            android:name="xposedminversion"
            android:value="54" />
        <meta-data
            android:name="xposeddescription"
            android:value="Xposed Media Scanner Optimizer" />
        <activity
            android:name=".MainPreferencesActivity"
            android:label="@string/launcher_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PreferencesActivity">
        </activity>
        <activity
            android:name=".ToolsPreferencesActivity">
        </activity>
        <activity
            android:name=".MiscellaneousPreferencesActivity">
        </activity>
    </application>

</manifest>

